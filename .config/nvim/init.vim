

syntax on

set encoding=utf-8

set number relativenumber
set nolinebreak

set nobackup
set wildmode=longest,list,full

set smartcase
set smartindent

set expandtab
set tabstop=2
set shiftwidth=2
set softtabstop=2

set autochdir
set hlsearch

set clipboard+=unnamedplus
set backspace=indent,eol,start


nnoremap <F3> :set hlsearch!<CR>
imap <A-BS> <C-w>
cmap <A-BS> <C-w>
